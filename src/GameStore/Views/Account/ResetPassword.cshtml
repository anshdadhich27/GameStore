@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
}

@section styles{
    <link href="~/css/policy-terms.min.css" rel="stylesheet" />
}


<div class="wrapper">
    <div class="middle">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="textInfoContent">
                        <h1 class="pageHeading">@ViewData["Title"]</h1>
                        <div class="infoContent">
                            <form asp-controller="Account" asp-action="ResetPassword"
                                  data-ajax-method="POST" data-method="post" class="col-sm-4"
                                  data-ajax="true" data-ajax-begin="onBegin" data-ajax-complete="onComplete">
                                <h4>Reset your password.</h4>
                                <hr />
                                <div class="form-group">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <input asp-for="UserKey" type="hidden" />
                                    <input asp-for="SecurityCode" type="hidden" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" class="form-control" placeholder="Enter password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword" class="control-label"></label>
                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    @*<button type="submit" class="btn btn-default">Reset</button>*@
                                    <input class="btn btn-default" type="submit" value="Reset" id="submitBtn" />
                                </div>
                            </form>
                        </div>
                    </div>
                    @*<p>@ViewBag.Message</p>*@
                </div>
            </div>
        </div>
    </div>
</div>
<div id="myModal" style="display:none" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Forgot Password</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        Your password has been succesfully changed, please log in again. 
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>






@section Scripts {
    <script src="~/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        function onBegin() {
            document.getElementById('submitBtn').disabled = true;
        };
        function onComplete() {
            $("#myModal").modal();
            document.getElementById('submitBtn').disabled = false;
        };
    </script>
}