@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}

@section styles{
    <link href="~/css/policy-terms.min.css" rel="stylesheet" />
}

<div class="wrapper">
    <div class="middle">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="textInfoContent">
                        <h1 class="pageHeading">@ViewData["Title"]</h1>
                        <div class="infoContent">
                            <form asp-controller="Account" asp-action="ForgotPassword"
                                  data-ajax-method="POST" data-method="post" class="col-sm-4"
                                  data-ajax="true" data-ajax-begin="onBegin" data-ajax-complete="onComplete">

                                <h4>Enter your email.</h4>
                                <hr />
                                <div class="form-group">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    @*<button type="submit" class="btn btn-default">Submit</button>*@
                                    <input class="btn btn-default" type="submit" value="Submit" id="submitBtn"/>
                                </div>
                            </form>
                        </div>
                    </div>
                    @*<p>@ViewBag.Message</p>*@
                </div>
            </div>
        </div>
    </div>
</div>
<div id="myModal" style="display:none"  class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Password Reset</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        A Password reset link has been sent on your email, please check your mail box and set new password.
                        
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>






@section Scripts {
<script src="~/js/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
<script type="text/javascript">
    function onBegin() {
        document.getElementById('submitBtn').disabled = true;
    };
    function onComplete() {
        $("#myModal").modal();
        document.getElementById('submitBtn').disabled = false;
    };
</script>
}
