@model Ads


<div class="get-discount">
    <div class="row">
        <div class="col-md-12">
            @{
                if (Model == null)
                {
                    <div class="dis-box animation-element slide-left">
                        <a href="/"><img src="/images/get-discount.jpg" alt="Game Store"></a>
                    </div>
                }
                else
                {
                    @Html.Raw(Model.AdScript)
                }
            }
            
        </div>
    </div>
</div>