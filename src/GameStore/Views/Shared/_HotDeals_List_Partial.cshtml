                                                        </div>

                                                    </div>

                                                    @{
                                                        if (game.PreOrder)
                                                        {
                                                            <div class="sale-tag"><span>Pre-owned</span></div>
                                                        }
                                                    }
                                                </div>
                                            </div>
                                                        }


    }


